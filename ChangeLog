	* goffice/graph/gog-axis-line.c (gog_tool_select_axis_point),
	(gog_tool_select_axis_render),
	(gog_tool_bound_is_valid_axis),
	(gog_tool_move_start_bound_point),
	(gog_tool_move_start_bound_render),
